import java.util.Scanner;
public class Main
{
	public static void main(String[] args) {
	    Scanner sc = new Scanner(System.in);
	    double n1, n2, n3, n4, n5;
		System.out.println("Escreva 5 números");
		n1 = sc.nextDouble();
		n2 = sc.nextDouble();
		n3 = sc.nextDouble();
		n4 = sc.nextDouble();
		n5 = sc.nextDouble();
		System.out.println("A soma dos 5 números é: " + (n1+n2+n3+n4+n5));
		System.out.println("E a média é: " + ((n1+n2+n3+n4+n5)/5));
		sc.close();
	}
}
